<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:XMLTransformer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="XMLTransformer.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="XMLTransformer">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Controls -->
        <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
            <Label>Source File</Label>
            <TextBox Text="{Binding SourceFileUrl}" IsReadOnly="True" />
            <Button Content="Browse" Click="BrowseSourceFile_Clicked" />
            
            <Label>Transformation File</Label>
        </StackPanel>
        
        <!-- TODO: Webview to render the XML -->
    </DockPanel>
</Window>
